<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.tkht.notion-linker</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>-lc</string>
    <string>$HOME/NotionLinker/run_linker.sh</string>
  </array>

  <!-- 15分間隔（毎時 0/15/30/45） -->
  <key>StartCalendarInterval</key>
  <array>
    <dict><key>Minute</key><integer>0</integer></dict>
    <dict><key>Minute</key><integer>15</integer></dict>
    <dict><key>Minute</key><integer>30</integer></dict>
    <dict><key>Minute</key><integer>45</integer></dict>
  </array>

  <!-- スリープ復帰時にも起動 -->
  <key>LaunchEvents</key>
  <dict>
    <key>com.apple.iokit.pwr_mgt.systempowerstate</key>
    <dict>
      <key>OnWake</key>
      <true/>
    </dict>
  </dict>

  <!-- 起動直後にも実行 -->
  <key>RunAtLoad</key>
  <true/>

  <!-- ログ出力（絶対パス） -->
  <key>StandardOutPath</key>
  <string>/Users/takuhito/Library/Logs/notion-linker.out.log</string>
  <key>StandardErrorPath</key>
  <string>/Users/takuhito/Library/Logs/notion-linker.err.log</string>
</dict>
</plist>
